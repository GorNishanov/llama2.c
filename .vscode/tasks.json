{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "build",
            "command": "cl.exe",
            "args": [
                "/Zi",
                "/EHsc",
                "/nologo",
                "/std:c++latest",
//                "/Od",
                "/fp:fast",                
                "/Ox",
                "/Qvec-report:1",
                "/openmp",
                "/Fe${workspaceFolder}\\run.exe",
                "run.cpp",
                "win.c"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
                "$msCompile"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
